<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="10"
    android:orientation="vertical"
    android:rowCount="10"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pad0"
        android:layout_column="0"
        android:layout_row="0"
        android:text="hid"
        android:visibility="invisible"
        />

    <VideoView
        android:id="@+id/vid1"
        android:layout_width="255dp"
        android:layout_height="190dp"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnSpan="4"
        android:layout_rowSpan="3"
        />

    <Button
        android:id="@+id/butCam"
        android:text="Cam"
        android:layout_column="1"
        android:layout_row="3"
        />
    <Button
        android:id="@+id/but1"
        android:text="1"
        android:layout_column="2"
        android:layout_row="3"
        />
    <Button
        android:id="@+id/but2"
        android:text="2"
        android:layout_column="3"
        android:layout_row="3"
        />
    <Button
        android:id="@+id/but3"
        android:text="3"
        android:layout_column="4"
        android:layout_row="3"
        />

    <TextView
        android:id="@+id/pad1"
        android:layout_column="5"
        android:layout_row="0"
        android:text="Pad"
        android:visibility="invisible"
        />


    <ImageButton
        android:id="@+id/butA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_a"
        android:layout_column="6"
        android:layout_row="0"
        />
    <ImageButton
        android:id="@+id/butUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_up"
        android:layout_column="7"
        android:layout_row="0"
        />
    <ImageButton
        android:id="@+id/butB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_b"
        android:layout_column="8"
        android:layout_row="0"
        />

    <ImageButton
        android:id="@+id/butLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_left"
        android:layout_column="6"
        android:layout_row="1"
        />

    <ImageButton
        android:id="@+id/butX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_x"
        android:layout_column="7"
        android:layout_row="1"
        />
    <ImageButton
        android:id="@+id/butRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_right"
        android:layout_column="8"
        android:layout_row="1"
        />
    <ImageButton
        android:id="@+id/butC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_c"
        android:layout_column="6"
        android:layout_row="2"
        />
    <ImageButton
        android:id="@+id/butDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_down"
        android:layout_column="7"
        android:layout_row="2"
        />
    <ImageButton
        android:id="@+id/butD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_d"
        android:layout_column="8"
        android:layout_row="2"
        />

    <SeekBar
        android:id="@+id/skb1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_row="3"
        android:layout_columnSpan="3"
        android:paddingTop="10dp"
        android:max="100"
        android:paddingBottom="10dp"
        />


</GridLayout>
