<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="9"
    android:orientation="vertical"
    android:rowCount="7"
    tools:context=".MainActivity">

    <net.bomtec.ziroba.VerticalSeekBar
        android:id="@+id/skb1"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="5"
        android:max="100"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        />

    <TextView
        android:id="@+id/text1"
        android:text="Camera"
        android:layout_column="1"
        android:layout_row="0"
        />
    <Switch
        android:id="@+id/camera_switch"
        android:title="Camera"
        android:defaultValue="false"
        android:summaryOn="Connected"
        android:summaryOff="Not Connected"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_column="3"
        android:layout_row="0"
        />

    <VideoView
        android:id="@+id/vid1"
        android:layout_width="255dp"
        android:layout_height="160dp"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnSpan="4"
        android:layout_rowSpan="3"

        />

    <net.bomtec.ziroba.VerticalSeekBar
        android:id="@+id/skb2"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_column="5"
        android:layout_row="0"
        android:layout_rowSpan="5"
        android:max="100"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        />

    <TextView
        android:id="@+id/text_connection"
        android:text="Connect"
        android:layout_column="6"
        android:layout_row="0"
        />
    <Switch
        android:id="@+id/connection_switch"
        android:title="Connection"
        android:defaultValue="false"
        android:summaryOn="Connected"
        android:summaryOff="Not Connected"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_column="7"
        android:layout_columnSpan="2"
        android:layout_row="0"
        />


    <ImageButton
        android:id="@+id/butA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_a"
        android:layout_column="6"
        android:layout_row="1"
        />
    <ImageButton
        android:id="@+id/butUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_up"
        android:layout_column="7"
        android:layout_row="1"
        />
    <ImageButton
        android:id="@+id/butB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_b"
        android:layout_column="8"
        android:layout_row="1"
        />

    <ImageButton
        android:id="@+id/butLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_left"
        android:layout_column="6"
        android:layout_row="2"
        />

    <ImageButton
        android:id="@+id/butX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_x"
        android:layout_column="7"
        android:layout_row="2"
        />
    <ImageButton
        android:id="@+id/butRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_right"
        android:layout_column="8"
        android:layout_row="2"
        />
    <ImageButton
        android:id="@+id/butC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_c"
        android:layout_column="6"
        android:layout_row="3"
        />
    <ImageButton
        android:id="@+id/butDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_down"
        android:layout_column="7"
        android:layout_row="3"
        />
    <ImageButton
        android:id="@+id/butD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/but_d"
        android:layout_column="8"
        android:layout_row="3"
        />


</GridLayout>
