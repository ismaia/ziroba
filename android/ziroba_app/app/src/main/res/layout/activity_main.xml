<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="8"
    tools:context=".MainActivity" >


    <ImageButton
        android:id="@+id/button_a"
        android:src="@drawable/button_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        style="?android:attr/borderlessButtonStyle"
        />
    <ImageButton
        android:id="@+id/button_up"
        android:src="@drawable/button_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        style="?android:attr/borderlessButtonStyle"
        />
    <ImageButton
        android:id="@+id/button_b"
        android:src="@drawable/button_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        style="?android:attr/borderlessButtonStyle"
        />
    <net.bomtec.zirobaapp.VerticalSeekBar
        android:id="@+id/seekbar1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_rowSpan="3"
        android:layout_row="0"
        android:layout_column="3"
        android:max="100"
        android:padding="20dp"
        />

    <ImageButton
        android:id="@+id/button_left"
        android:src="@drawable/button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        style="?android:attr/borderlessButtonStyle"
        />
    <ImageButton
        android:id="@+id/button_x"
        android:src="@drawable/button_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        style="?android:attr/borderlessButtonStyle"
        />
    <ImageButton
        android:id="@+id/button_right"
        android:src="@drawable/button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        style="?android:attr/borderlessButtonStyle"
        />



    <ImageButton
        android:id="@+id/button_c"
        android:src="@drawable/button_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        style="?android:attr/borderlessButtonStyle"
        />
    <ImageButton
        android:id="@+id/button_down"
        android:src="@drawable/button_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        style="?android:attr/borderlessButtonStyle"
        />
    <ImageButton
        android:id="@+id/button_d"
        android:src="@drawable/button_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        style="?android:attr/borderlessButtonStyle"
        />
</GridLayout>


